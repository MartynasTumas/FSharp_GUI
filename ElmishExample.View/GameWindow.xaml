<Window x:Class="ElmishExample.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElmishExample.View"
        mc:Ignorable="d"
                Title="GameWindow" Height="450" Width="500">

    <StackPanel>
        <TextBox Text="{Binding Input}" />
        <Button Command="{Binding Guess}" Content="Guess" Width="100" Height="30" />
        <TextBlock Text="{Binding Display}" Height="380" />
    </StackPanel>
</Window>
